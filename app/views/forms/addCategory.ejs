<section class="w-full mx-auto bg-transparent">
    <h1 class="text-4xl text-center text-white py-10">Categorias</h1>
    <div class="overflow-x-auto">
        <div class="flex items-center justify-center overflow-hidden">
            <div class="w-full lg:w-1/2">
                <div class="bg-white shadow-md rounded my-6">
                    <table class="min-w-max w-full table-auto">
                        <thead>
                            <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                                <th class="py-3 md:px-6 text-center md:text-left">Categoria</th>                    
                                <th class="py-3 md:px-6 text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-600 text-sm font-light">
                            <% categorys.forEach(category => { %>
                            <tr class="border-b border-gray-200 hover:bg-gray-100">
                                <td class="py-3 px-6 text-left whitespace-nowrap">
                                    <div class="flex items-center">
                                        <span class="font-medium"><%= category.name %></span>
                                    </div>
                                </td>
                                <td class="py-3 md:px-6 text-center">
                                    <div class="flex item-center justify-center">        
                                        <div class="w-5 mr-2 transform hover:text-purple-500 hover:scale-110">
                                            <a href="/deletecategory/<%= category.id %>"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg></a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="bg-violet w-full mx-auto lg:my-2 py-8">
    <h1 class="text-4xl text-center text-yellow py-10">Agregar Categorias</h1>
    <form action="/addcategory" class="w-1/2 bg-violet-500 mx-auto p-4" method="post">
        <label for="nombre" class="flex flex-col py-2 lg:w-1/2 mx-auto">
            Nombre
            <input id="nombre" type="text" name="name" placeholder="Nombre de la categoria" class="rounded-2xl py-2 px-4 my-2 font-sans" autocomplete="name">
        </label>
        <button type="submit" class="bg-yellow-500 py-2 px-6 rounded-xl mt-2 font-bold text-violet hover:text-white mx-auto flex">Agregar</button>
    </form>
</section>