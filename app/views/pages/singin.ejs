<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>
    <section class="bg-violet-500 lg:w-1/2 mx-auto my-10 lg:absolute lg:top-1/4 lg:left-1/4">
        <form action="/singin" class="w-1/2 mx-auto p-4" method="post">
            <h1 class="text-yellow text-2xl text-center">Iniciar sesión</h1>
            <% if (errorMessage == 'Missing credentials') { %>
                <p class="text-yellow-500 text-center">Complete los campos</p>
            <% } else { %>
                <p class="text-yellow-500 text-center"><%= errorMessage %></p>
            <% } %>
            <div class="relative">
                <label for="email" class="flex flex-col py-2">
                    Correo electronico
                    <input id="email" name="email" type="text" class="rounded-2xl py-2 px-4 my-2" placeholder="Correo electronico" autocomplete="email-address">
                </label>
            </div>            
            <label for="password" class="flex flex-col py-2">
                Contraseña
                <div class="flex flex-row-reverse">
                    <input id="password" name="password" type="password" class="rounded-2xl py-2 px-4 my-2 w-full" autocomplete="off">
                    <i id="iconChange" class="absolute my-4 mx-4 ri-eye-line"></i>
                </div>
            </label>
            <p class="py-2 text-sm text-gray-300 hover:underline hover:text-black">No estas registrado? <a class="hover:text-yellow-500" href="/singup">Registrarse</a></p>
            <button class="bg-yellow-500 py-2 px-6 rounded-xl mt-2 font-bold text-violet hover:text-white">Sing in</button>
        </form>
    </section>
    <%- include('../partials/footer.ejs') %>
    <script src="/javascript/effects.js"></script>
</body>
</html>
